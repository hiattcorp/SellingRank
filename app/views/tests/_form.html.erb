<%= form_for(@test, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @test.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h4>

      <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <h4>Questions</h4>
  <%= f.fields_for :questions do |question_builder| %>
    <div class="question_fields">
      <div class="form-group">
        <%= question_builder.label :content, "Question", class: "col-sm-2 control-label" %><br>
        <div class="col-sm-10">
        <%= question_builder.text_field :content, class: "form-control" %>
        </div>
        <%= question_builder.fields_for :options do |options_builder| %>
          </div>
          <dl class="dl-horizontal">
            <dd>
            <%= options_builder.label :answer, "Option" %>
            <%= options_builder.text_field :answer %>
            <%= options_builder.label :points, "Points" %>
            <%= options_builder.text_field :points %>
        <% end %>
  <% end %>
  </dd>
  </dl>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
