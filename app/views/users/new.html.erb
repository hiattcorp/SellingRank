<div class='jumbotron'>
  <div class='row'>
    <% unless @user.omniauth? %>
      <div class="col-md-10 col-md-offset-1 text-center">
        <%#= image_tag('octocat.png', class: 'img-responsive') %>
        <%= link_to button_tag('Sign up via Google', class: 'btn-auth btn-google'), '/auth/google_oauth2' %>
      </div>
      <div class="col-md-10 col-md-offset-1 text-center">
        <h3>Signup</h3>
      </div>
    <% else %>
      <div class='col-sx-10 col-xs-offset-2 center-block'>
        <h1>Verify Details</h1>
      </div>
    <% end %>

    <%= render 'users/form' %>

    <%= link_to 'Back', root_path %>
  </div>
</div>
