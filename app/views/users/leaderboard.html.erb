<div class="page-header">
  <h1>Leaderboard</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Initial</th>
      <th>Score</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <td><%= user.first_name %></td>
      <td><%= user.last_name.first(1) %></td>
      <% user.attempts.each do |attempts| %>
        <td><%= attempts.score  %></td>
      <% end %>
      </tbody>
      </table>
      </div>
    <% end %>

