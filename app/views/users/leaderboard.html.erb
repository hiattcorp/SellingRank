<div class="page-header">
  <h1>Leaderboard</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Rank</th>
      <th>First Name</th>
      <th>Last Initial</th>
      <th><%= link_to 'Aptitude', sort: 'score' %></th>
      <th><%= link_to 'Data and Skills', sort: 'score' %></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name.first %></td>
        <td><%= user.attempts.where(test_id: 1).maximum(:score) %></td>
        <td><%= user.attempts.where(test_id: 2).maximum(:score) %></td>
    <% end %>
    </tr>
    </tbody>
  </table>
</div>

