<div class="page-header">
  <h1>Listing tests</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Test Name</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @tests) do |test| %>
        <td><%= test.name %></td>
        <td><%= link_to "Show Leaderboard", show_leaderboard_path(test) %></td>
      <% end %>
    </tbody>
  </table>
</div>
