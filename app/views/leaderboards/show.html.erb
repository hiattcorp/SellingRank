<div class="page-header">
  <h1>Leaderboard</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Initial</th>
      <th><%= link_to 'Aptitude', sort: 'score' %></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <% user.attempts.where(test_id: @test_id).order(:score).last %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name.first %></td>
        <td><%= user.attempts.where(@test_id).maximum(:score) %></td>

    <% end %>
    </tr>
    </tbody>
  </table>
</div>


