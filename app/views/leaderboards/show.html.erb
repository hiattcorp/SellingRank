<div class="page-header">
  <h1>Leaderboard:</h1>
  <h2><%= @test.name %></h2>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>First Name</th>
      <th>Last Initial</th>
      <th><%= link_to 'Aptitude', sort: 'score' %></th>
    </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= user.first_name %></td>
        <td><%= user.last_name.first %></td>
        <td><%= @attempts.where(user_id: user.id).order(:score).last.score %></td>
      <% end %>
    </tr>
    </tbody>
  </table>

  <% if @users.empty? %>
    <h3>--- No users have taken this test ---</h3>
  <% end %>
</div>
